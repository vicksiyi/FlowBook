/* components/group-book/index.wxss */
.book {
  height: 220rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}

.book-hover {
  border-color: #000;
  opacity: 0.5;
}

.book .img {
  width: 210rpx;
  height: 210rpx;
  margin: 5rpx;
}

.book .img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin: 5rpx;
}

.book .detail {
  width: 400rpx;
  font-size: 28rpx;
  padding: 10rpx;
}

.book .detail view {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 52rpx;
  line-height: 52rpx;
}

.book .detail view:nth-child(2) {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}